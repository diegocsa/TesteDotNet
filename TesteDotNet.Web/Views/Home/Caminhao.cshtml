@model CaminhaoItemViewModel

<h1>@ViewData["Title"]</h1>

@if(ViewBag.ErroProcesso != null)
{
<div id="cookieConsent" class="alert alert-danger alert-dismissible fade show" role="alert">
    @ViewBag.ErroProcesso
</div>
}

<p>

    <form method="POST">
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control" id="descricao" name="Descricao" placeholder="Teste" value="@Model.Descricao">
        </div>
        <div class="form-group">
            <label for="modelo">Modelo</label>
            <input type="text" class="form-control" id="modelo" name="Modelo" placeholder="FH ou FM" value="@Model.Modelo">
        </div>
        <div class="form-group">
            <label for="AnoFabricacao">Ano de fabricação</label>
            <input type="number" class="form-control" id="AnoFabricacao" name="AnoFabricacao" value="@Model.AnoFabricacao" placeholder="@System.DateTime.Now.Year">
        </div>
        <div class="form-group">
            <label for="AnoModelo">Ano do modelo</label>
            <input type="number" class="form-control" id="AnoModelo" name="AnoModelo" value="@Model.AnoModelo" placeholder="@(System.DateTime.Now.Year +1)">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Salvar</button>
    </form>
    @if(ViewData["Method"] == "PUT"){
    <form method="POST" action="/Home/excluir/@Model.Id">
        <input type="hidden" value="@Model.Id" />
        <button type="submit" class="btn btn-danger mb-2">Excluir</button>
    </form>
    }

</p>
